generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Message {
  id      Int    @id @default(autoincrement())
  content String
  proyect  Proyects @relation(fields: [proyectId], references: [id])
  proyectId Int 
}


model Proyects {
  id   Int    @id @default(autoincrement())
  name String
  messages Message[]
}
